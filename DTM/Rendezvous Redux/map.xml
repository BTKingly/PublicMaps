<?xml version="1.0" encoding="UTF-8"?>
<map proto="1.3.2">
   <name>Rendezvous Redux</name>
   <version>2.2.1</version>
   <gamemode>dtm</gamemode>
   <objective>Destroy the enemy team's monuments!</objective>
   <authors>
      <author uuid="44df6b20-168f-4389-b7ac-434518207c2f"/> <!-- ParaPenguin -->
      <author uuid="378952b5-808f-4a33-911e-39c7ba153b38"/> <!-- Pavlo -->
   </authors>
   <teams>
      <team color="dark red" max="32">Red</team>
      <team color="blue" max="32">Blue</team>
   </teams>
   <kits>
      <kit name="spawn">
         <item slot="0" unbreakable="true">iron sword</item>
         <item slot="1" unbreakable="true">bow</item>
         <item slot="2" unbreakable="true">diamond pickaxe</item>
         <item slot="3" unbreakable="true">stone axe</item>
         <item slot="4" amount="64">wood</item>
         <item slot="5" amount="64">wood</item>
         <item slot="6" amount="64">glass</item>
         <item slot="7" amount="1">golden apple</item>
         <item slot="8" amount="64">cooked beef</item>
         <item slot="9" amount="64">arrow</item>
         <potion duration="5" amplifier="5">damage resistance</potion>
         <potion duration="5" amplifier="5">heal</potion>
         <chestplate unbreakable="true">chainmail chestplate</chestplate>
         <boots unbreakable="true">iron boots</boots>
      </kit>
      <kit name="red" parents="spawn">
         <helmet unbreakable="true" color="993333">leather helmet</helmet>
         <leggings unbreakable="true" color="993333">leather leggings</leggings>
      </kit>
      <kit name="blue" parents="spawn">
         <helmet unbreakable="true" color="334CB2">leather helmet</helmet>
         <leggings unbreakable="true" color="334CB2">leather leggings</leggings>
      </kit>
   </kits>
   <spawns>
      <spawn team="red" kit="red" yaw="90">
         <point>69.5,27,-797.5</point>
      </spawn>
      <spawn team="blue" kit="blue" yaw="-90">
         <point>-44.5,27,-797.5</point>
      </spawn>
      <default>
         <point>12.5,54,-897.5</point>
      </default>
   </spawns>
   <filters>
      <filter name="only-red">
         <team>red</team>
      </filter>
      <filter name="only-blue">
         <team>blue</team>
      </filter>
   </filters>
   <regions>
       <rectangle name="playable" min="-89,-837" max="114,-757" />
       <cuboid name="red-spawn-enter" min="56,33,-802" max="61,37,-794"/>
       <cuboid name="blue-spawn-enter" min="-37,33,-802" max="-32,37,-794"/>
       <cuboid name="red-spawn-tunnel" min="57,25,-802" max="73,33,-794"/>
       <cuboid name="blue-spawn-tunnel" min="-49,33,-802" max="-33,25,-794"/>
      <apply block="deny-all" message="You may not modify the spawn area.">
         <region name="red-spawn-enter" />
      </apply>
      <apply block="deny-all" message="You may not modify the spawn area.">
         <region name="blue-spawn-enter" />
      </apply>
      <apply block="deny-all" message="You may not modify the spawn area.">
         <region name="red-spawn-tunnel" />
      </apply>
      <apply block="deny-all" message="You may not modify the spawn area.">
         <region name="blue-spawn-tunnel" />
      </apply>
      <apply enter="only-red" message="You may not enter `cRed Team`c's spawn area!">
         <region name="red-spawn-tunnel" />
      </apply>
      <apply enter="only-blue" message="You may not enter `9Blue Team`c's spawn area!">
         <region name="blue-spawn-tunnel" />
      </apply>
      <apply block="deny-all" message="You may not build outside of the playing field!">
         <negative>
            <region name="playable" />
         </negative>
      </apply>
   </regions>
   <destroyables materials="obsidian" sparks="true">
      <destroyable name="Left Monument" owner="red">
         <block>108,37,-832</block>
      </destroyable>
      <destroyable name="Right Monument" owner="red">
         <block>108,37,-764</block>
      </destroyable>
      <destroyable name="Left Monument" owner="blue">
         <block>-84,37,-764</block>
      </destroyable>
      <destroyable name="Right Monument" owner="blue">
         <block>-84,37,-832</block>
      </destroyable>
   </destroyables>
   <itemremove>
      <item>iron sword</item>
      <item>bow</item>
      <item>diamond pickaxe</item>
      <item>stone axe</item>
      <item>wood</item>
      <item>obsidian</item>
      <item>glass</item>
      <item>arrow</item>
      <item>leather helmet</item>
      <item>chainmail chestplate</item>
      <item>leather leggings</item>
      <item>iron boots</item>
      <item>cooked beef</item>
      <item>golden apple</item>
   </itemremove>
   <killreward>
      <item amount="1">golden apple</item>
      <item amount="16">arrow</item>
   </killreward>
   <timelock>on</timelock>
   <maxbuildheight>55</maxbuildheight>
</map>
